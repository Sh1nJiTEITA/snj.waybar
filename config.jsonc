	"format-paused": "{status_icon} <i>{dynamic}</i>",
	"dynamic-len" : 30,
	"player-icons": {
		"default": "‚ñ∂",
		"mpv": "üéµ"
	},
	"status-icons": {
		"paused": "ÔÅå"
	},
	// "ignored-players": ["firefox"]
