	    "portable": "ÔÇï",
	    "car": "ÔÜπ",
	    "default": ["ÔÄß", "ÔÄ®"]
	},
	"scroll-step": 1,
	"on-click": "pavucontrol",
	"on-click-right" : "pactl set-sink-mute @DEFAULT_SINK@ toggle",
	"ignored-sinks": ["Easy Effects Sink"]
    },

    "power-profiles-daemon": {
	
	"format": "{icon}",
	"tooltip-format": "Power profile: {profile}\nDriver: {driver}",
	"tooltip": true,
	"format-icons": {
	    "default": "ÔÉß",
	    "performance": "ÔÉß",
	    "balanced": "Ôâé",
	    "power-saver": "ÔÅ¨"
      }
    },
    "network": {
	// "interface": "wlp2s0",
	"format": "{ifname}",
	"format-wifi": "{essid} ({signalStrength}%) Ôá´",
	// "format-ethernet": "{ipaddr}/{cidr} Û∞äó",
	// "format-ethernet": "ÔÉÅ {ifname}",
	"format-ethernet": "ÔÉÅ ",
	"format-disconnected": "", //An empty format will hide the module.
	"tooltip-format": "{ifname} via {gwaddr} Û∞äó",
	"tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
	"tooltip-format-ethernet": "Name      = {ifname}\nIP        = {ipaddr}\nGateway   = {gwaddr}\nNetmask   = {netmask}\nCIDR mask = {cidr}",
	"tooltip-format-disconnected": "Disconnected",
	"max-length": 50
    },

    "clock": {
	"locale" : "ru_RU.UTF-8",
	"format": "Û∞É± {:%a|%b %d|%R}",
	"format-alt": "{:%H:%M}",
	"tooltip-format": "<tt>{calendar}</tt>",
	"calendar": {
	    "mode"          : "year",
	    "mode-mon-col"  : 3,
	    "weeks-pos"     : "right",
	    "on-scroll"     : 1,
	    "on-click-right": "mode",
	    "format": {
		"days":       "<span color='#a89984'><b>{}</b></span>",
		"weeks":      "<span color='#a89984'><b>W{:%U}</b></span>",
		"weekdays":   "<span color='#fbf1c7'><b>{}</b></span>",
		"today":      "<span color='#fe8019'><b><u>{}</u></b></span>",
		"months":     "<span color='#fbf1c7'><b>{}</b></span>",
	    }
	},
	"actions": {
	    "on-click-right": "mode",
	    "on-click-forward": "tz_up",
	    "on-click-backward": "tz_down",
	    "on-scroll-up": "shift_up",
	    "on-scroll-down": "shift_down"
	}
    },

    "disk": {
	"interval": 30,
	"format": "{path} {percentage_free}%",
	"path": "/"
    },

    "custom/left-clock-arrow"  : {
	"format" : "ÓÇ≤",
	"tooltip": false
    },
	
    "custom/cpu": {
        "format": "{}",
	//"tooltip-format" : "{}",
	"tooltip" : true,
        "exec": "lua /home/snj/Code/lua_utils/waybar_cpu.lua",
        "interval": 1,
	"return-type": "json",
    },

    "custom/coin" : { 
